{
  "version": 2,
  "projects": {
    "website/website": {
      "projectType": "application",
      "root": "apps/website/website",
      "sourceRoot": "apps/website/website/src",
      "prefix": "app",
      "targets": {
        "build": {
          "executor": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/apps/website/website",
            "index": "apps/website/website/src/index.html",
            "main": "apps/website/website/src/main.ts",
            "polyfills": "apps/website/website/src/polyfills.ts",
            "tsConfig": "apps/website/website/tsconfig.app.json",
            "aot": true,
            "assets": [
              "apps/website/website/src/favicon.ico",
              "apps/website/website/src/assets"
            ],
            "styles": [
              "apps/website/website/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/website/website/src/environments/environment.ts",
                  "with": "apps/website/website/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "0kb"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "website/website:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "website/website:build:production"
            }
          }
        },
        "extract-i18n": {
          "executor": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "website/website:build"
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/website/website/src/**/*.ts",
              "apps/website/website/src/**/*.html"
            ]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": [
            "coverage/apps/website/website"
          ],
          "options": {
            "jestConfig": "apps/website/website/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "website/website-e2e": {
      "root": "apps/website/website-e2e",
      "sourceRoot": "apps/website/website-e2e/src",
      "projectType": "application",
      "targets": {
        "e2e": {
          "executor": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/website/website-e2e/cypress.json",
            "tsConfig": "apps/website/website-e2e/tsconfig.e2e.json",
            "devServerTarget": "website/website:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "website/website:serve:production"
            }
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/website/website-e2e/**/*.{js,ts}"
            ]
          }
        }
      }
    },
    "frontend/design-system": {
      "projectType": "library",
      "root": "libs/frontend/design-system",
      "sourceRoot": "libs/frontend/design-system/src",
      "prefix": "ds",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "libs/frontend/design-system/src/**/*.ts",
              "libs/frontend/design-system/src/**/*.html"
            ]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": [
            "coverage/libs/frontend/design-system"
          ],
          "options": {
            "jestConfig": "libs/frontend/design-system/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    }
  },
  "generators": {
    "@nrwl/angular:application": {
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress",
      "strict": true
    },
    "@nrwl/angular:library": {
      "unitTestRunner": "jest",
      "strict": true
    },
    "@nrwl/angular:component": {
      "style": "scss"
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/workspace"
  }
}
